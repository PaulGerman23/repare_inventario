@model IEnumerable<inventario_coprotab.Models.DBInventario.Movimiento>

@{
    ViewData["Title"] = "Movimientos";
}

<h2>Movimientos</h2>

<p>
    <a class="btn btn-primary" asp-controller="Movimiento" asp-action="Create">Nuevo</a>
</p>

<table class="table table-custom table-hover">
    <thead>
        <tr>
            <th>Dispositivo</th>
            <th>Tipo</th>
            <th>Fecha</th>
            <th>Ubicación</th>
            <th>Responsable</th>
            <th>Cantidad</th>
            <th>Observaciones</th>

            <th>Acciones</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.IdDispositivoNavigation?.Nombre</td>
                <td>@item.TipoMovimiento</td>
                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@(item.IdUbicacionNavigation?.Nombre ?? "En Sistema")</td> 
                <td>@(item.IdResponsableNavigation?.Nombre ?? "Sistema")</td>
                <td>@item.Cantidad</td>
                <td>@item.Observaciones</td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <button class="btn btn-sm btn-outline-primary" onclick="abrirModalDetalle(@item.IdMovimiento)" title="Ver Detalles">
                            <i class="bi bi-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-warning-custom" onclick="abrirModalEditar(@item.IdMovimiento)" title="Editar">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-sm btn-danger-custom" onclick="abrirModalEliminar(@item.IdMovimiento)" title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </button>
                        </div>

            </tr>
        }
    </tbody>
</table>


<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Movimiento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="editModalBody">
                <!-- Aquí se cargará el PartialView -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // Abrir modal con formulario
            $(".editMovimiento").click(function () {
                var id = $(this).data("id");
                $.get("/Movimiento/Edit/" + id, function (data) {
                    $("#editModalBody").html(data);
                    $("#editModal").modal("show");
                });
            });

            // Guardar cambios vía AJAX y actualizar solo la fila
            $(document).on("submit", "#editMovimientoForm", function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    url: form.attr("action"),
                    type: "POST",
                    data: form.serialize(),
                    success: function (res) {
                        if (res.success) {
                            // Actualiza solo la fila modificada
                            var row = $("#movimiento-" + res.movimiento.id);
                            row.find("td:eq(1)").text(res.movimiento.tipo);
                            row.find("td:eq(2)").text(res.movimiento.fecha);
                            row.find("td:eq(3)").text(res.movimiento.ubicacion);
                            row.find("td:eq(4)").text(res.movimiento.responsable);
                            row.find("td:eq(5)").text(res.movimiento.cantidad);
                            row.find("td:eq(6)").text(res.movimiento.observaciones);

                            $("#editModal").modal("hide");
                        } else {
                            // Si hay errores, mostramos el partial view con validaciones
                            $("#editModalBody").html(res);
                        }
                    }
                });
            });

        });
    </script>
}

