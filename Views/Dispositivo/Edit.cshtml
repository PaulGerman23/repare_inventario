@model inventario_coprotab.ViewModels.DispositivoCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Dispositivo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdMarca" class="control-label"></label>
                <select asp-for="IdMarca" class="form-control" asp-items="ViewBag.IdMarca"></select>
                <a href="#" class="btn btn-sm btn-outline-primary mt-1" data-bs-toggle="modal" data-bs-target="#createMarcaModal">+ Nueva Marca</a>
            </div>

            <div class="form-group">
                <label asp-for="IdTipo" class="control-label"></label>
                <select asp-for="IdTipo" class="form-control" asp-items="ViewBag.IdTipo" id="IdTipo" onchange="actualizarFormulario()"></select>
            </div>

            <!-- Campo dinámico: Cantidad Inicial (solo si es consumible) -->
            <div id="campo-cantidad" class="form-group" style="display: none;">
                <label asp-for="CantidadInicial" class="control-label">Cantidad Inicial</label>
                <input asp-for="CantidadInicial" class="form-control" type="number" min="1" />
                <span asp-validation-for="CantidadInicial" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CodigoInventario" class="control-label"></label>
                <input asp-for="CodigoInventario" class="form-control" />
                <span asp-validation-for="CodigoInventario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NroSerie" class="control-label"></label>
                <input asp-for="NroSerie" class="form-control" />
                <span asp-validation-for="NroSerie" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Modal para crear marca -->
<div class="modal fade" id="createMarcaModal" tabindex="-1" aria-labelledby="createMarcaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createMarcaModalLabel">Crear Nueva Marca</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="nombreMarca">Nombre</label>
                    <input type="text" class="form-control" id="nombreMarca" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="crearMarca()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function actualizarFormulario() {
            var tipoSelect = document.getElementById('IdTipo');
            var cantidadDiv = document.getElementById('campo-cantidad');
            var selectedValue = tipoSelect.value;

            // Asumiendo que "2" es el ID de "Consumible"
            if (selectedValue === "2") {
                cantidadDiv.style.display = 'block';
                document.getElementById('CantidadInicial').required = true;
            } else {
                cantidadDiv.style.display = 'none';
                document.getElementById('CantidadInicial').required = false;
                document.getElementById('CantidadInicial').value = '';
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            actualizarFormulario();
        });

        function crearMarca() {
            var nombre = document.getElementById('nombreMarca').value.trim();
            if (!nombre) {
                alert('El nombre es obligatorio');
                return;
            }

            var token = $('input[name="__RequestVerificationToken"]').val();

            fetch('/Marca/CreateAjax', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify({ nombre: nombre })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Marca creada exitosamente');
                    $('#createMarcaModal').modal('hide');

                    // Actualizar el desplegable de marcas con la nueva marca
                    var select = document.getElementById('IdMarca');
                    var option = document.createElement('option');
                    option.value = data.id;
                    option.text = data.nombre;
                    option.selected = true; // Seleccionar la nueva marca
                    select.appendChild(option);

                    $('#createMarcaModal').modal('hide');
                } else {
                    var errorMsg = data.errors?.join('\n') || 'Error desconocido';
                    alert('Error al crear la marca:\n' + errorMsg);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error de red al crear la marca');
            });
        }
    </script>
}