@model inventario_coprotab.ViewModels.DispositivoCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Dispositivo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdMarca" class="control-label"></label>
                <select asp-for="IdMarca" class="form-control" asp-items="ViewBag.IdMarca"></select>
                <a href="#" class="btn btn-sm btn-outline-primary mt-1" data-bs-toggle="modal" data-bs-target="#createMarcaModal">+ Nueva Marca</a>
            </div>

            <div class="form-group">
                <label asp-for="IdTipo" class="control-label"></label>
                <select asp-for="IdTipo" class="form-control" asp-items="ViewBag.IdTipo" id="IdTipo"></select>
            </div>

            <!-- Campo dinámico: Cantidad Inicial (solo si es consumible) -->
            <div id="campo-cantidad" class="form-group" style="display: none;">
                <label asp-for="CantidadInicial" class="control-label"></label>
                <input asp-for="CantidadInicial" class="form-control" min="1" />
                <span asp-validation-for="CantidadInicial" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CodigoInventario" class="control-label"></label>
                <input asp-for="CodigoInventario" class="form-control" />
                <span asp-validation-for="CodigoInventario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NroSerie" class="control-label"></label>
                <input asp-for="NroSerie" class="form-control" />
                <span asp-validation-for="NroSerie" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<!-- Modal para crear nueva marca -->
<div class="modal fade" id="createMarcaModal" tabindex="-1" aria-labelledby="createMarcaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createMarcaModalLabel">Crear Nueva Marca</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createMarcaForm">
                    <div class="mb-3">
                        <label for="nombreMarca" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombreMarca" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="crearMarca()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function actualizarFormulario() {
            var tipoSelect = document.getElementById('IdTipo');
            var cantidadDiv = document.getElementById('campo-cantidad');

            // Obtener el valor seleccionado (IdTipo)
            var selectedValue = tipoSelect.value;

            // Si es consumible (id_tipo = 2), mostrar el campo
            if (selectedValue === "2") {
                cantidadDiv.style.display = 'block';
                document.getElementById('CantidadInicial').required = true;
            } else {
                cantidadDiv.style.display = 'none';
                document.getElementById('CantidadInicial').required = false;
                document.getElementById('CantidadInicial').value = '';
            }
        }

        // Llamar a la función al cargar la página
        document.addEventListener('DOMContentLoaded', function () {
            actualizarFormulario();
        });

        // Asegurar que se ejecute al cambiar el tipo
        document.getElementById('IdTipo').addEventListener('change', actualizarFormulario);

        function crearMarca() {
            var nombre = document.getElementById('nombreMarca').value;
            if (!nombre) {
                alert('El nombre es obligatorio');
                return;
            }

            fetch('/Marca/Create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                body: JSON.stringify({ nombre: nombre })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Marca creada exitosamente');
                    $('#createMarcaModal').modal('hide');
                    location.reload();
                } else {
                    alert('Error al crear la marca');
                }
            });
        }
    </script>
}